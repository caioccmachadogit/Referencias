<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="layout_padrao">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="layout_opaco_padrao">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/ic_fundo_principal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="botao_padrao">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/botao_padrao</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/cor_padrao2_textView</item>
    </style>

    <style name="textView_padrao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/cor_padrao2_textView</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textView_padrao_branco">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/cor_padrao_textView</item>
    </style>

</resources>